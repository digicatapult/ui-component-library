{
  "name": "@digicat/ui-component-library",
  "version": "0.1.1",
  "private": true,
  "description": "UI Component Library",
  "author": "Digital Catapult (https://www.digicatapult.org.uk)",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/components"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.spec.js",
    "build:watch": "lerna exec --parallel -- babel --watch --root-mode upward src -d lib --ignore **/*.spec.js",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint .",
    "test": "jest",
    "prelink": "yarn --prod"
  },
  "dependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.2.1",
    "babel-plugin-styled-components": "^1.12.0"
  },
  "devDependencies": {
    "core-js": "^3.8.3",
    "depcheck": "^1.3.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-workspaces": "^0.6.2",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^1.19.1"
  }
}
