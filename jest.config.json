{
  "cacheDirectory": ".jest-cache",
  "coverageDirectory": ".jest-coverage",
  "coveragePathIgnorePatterns": ["<rootDir>/lib/"],
  "coverageReporters": ["html", "text"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "preset": "ts-jest",
  "testPathIgnorePatterns": ["<rootDir>/lib/"],
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.[tj]sx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
