{
  "cacheDirectory": ".jest-cache",
  "coverageDirectory": ".jest-coverage",
  "coveragePathIgnorePatterns": [
    "<rootDir>/lib/"
  ],
  "coverageReporters": [
    "html",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "preset": "ts-jest/presets/default-esm",
  "testPathIgnorePatterns": [
    "<rootDir>/lib/"
  ],
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*\\.util)\\.js$": "$1.mock",
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
